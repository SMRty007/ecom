
<h1>Cart</h1>
<table>
  <thead>
    <tr>  
      <th>Product name</th>
      <th>Product amount</th>
      <th>Product info</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
        <td><%= product.product_name %></td>
        <td><%= product.product_amount %></td>
        <td><%= product.product_info %></td>
        <td><%= link_to 'Show', product %></td>
        <td>
          <% if current_user.carts.where(product_id: product.id).present? %>
            <%= link_to 'Remove_from_cart', remove_from_cart_product_path(product), method: 'delete'  %></td>
          <% end %>
         </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Place Order', place_order_path(product_ids: @products.pluck(:id)) %>
<%= link_to 'back', root_path %>



