<p id="notice"><%= notice %></p>
<h1>Products</h1>
<table>
  <thead>
    <tr>  
      <th>Product name</th>
      <th>Product amount</th>
      <th>Product info</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
        <td><%= product.product_name %></td>
        <td><%= product.product_amount %></td>
        <td><%= product.product_info %></td>
        <td><%= link_to 'Show', product %></td>
        <td>
        <% if user_signed_in? && current_user.type == 'Customer'%>
          <% if current_user.carts.where(product_id: product.id).present? %>
            <%= link_to 'Remove_from_cart', remove_from_cart_product_path(product), method: 'delete'  %></td>
          <% else %>
            <%= link_to 'Add_to_cart', add_to_cart_product_path(product), method: 'post' %>
          <% end %>
        <% end %>  
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_product_path(product) if policy(product).edit? %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } if policy(product).destroy? %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% if user_signed_in? && current_user.type == 'Customer'%>
  <%= link_to 'Cart', carts_index_path %>
  <p>  </p>
  <%= link_to 'Your Orders', orders_index_path %>
<% end %>    
<% if user_signed_in? && policy(@product).new? %>
  <%= link_to 'New Product', new_product_path(@product) %>
<% end %>
